<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleAppXamarin.Pages.ProductImageEditPage"
             Title="{Binding Name}">
  <ContentPage.Content >
    
    <StackLayout Padding="10" VerticalOptions="StartAndExpand">

      <Label x:Name="imageName" />
      <Entry x:Name="imageNameEntry" Text="{Binding Name}" />


      <Label x:Name="url" />
      <Entry x:Name="urlEntry" Text="{Binding Url}" />

      <Label x:Name="urlThubnail" />
      <Entry x:Name="urlThubnailEntry" Text="{Binding UrlThubnail}" />

      <Label x:Name="description" />
      <Entry x:Name="descriptionEntry" Text="{Binding Description}" />
      
      <Button x:Name="save" Clicked="SaveClicked"/>
      
    </StackLayout>
  </ContentPage.Content>
</ContentPage>